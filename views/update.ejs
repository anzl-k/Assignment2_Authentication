<%- include('partials/header') %>
<%- include('partials/navbar') %>

<section class="py-5">
    <div class="container">
        <form action="/contacts/update/<%= contact.id %>" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>" required>
            </div>
            <div class="mb-3">
                <label for="number" class="form-label">Number</label>
                <input type="text" class="form-control" id="number" name="number" value="<%= contact.number %>" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/contacts" class="btn btn-secondary">Cancel</a>
            <form style="display:inline;" action="/contacts/delete/<%= contact.id %>" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </form>
    </div>
</section>

<%- include('partials/footer') %>
